<Page x:Class="yLibrary.windows.functionWindow.functionMainPage.FunctionMainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:yLibrary.windows.functionWindow.functionMainPage"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="FunctionMainPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30" Content="Y图书馆管理系统主页面"></Label>
        <StackPanel Grid.Row="2" Grid.Column="1" Grid.RowSpan="4" Grid.ColumnSpan="3" Orientation="Vertical">
            <Button HorizontalAlignment="Center" VerticalAlignment="Center" Height="40" Width="200" Margin="10" Content="图书借阅" Command="{Binding GoToBorrowPageCmd}"></Button>
            <Button HorizontalAlignment="Center" VerticalAlignment="Center" Height="40" Width="200" Margin="10" Content="图书归还" Command="{Binding GoToBorrowPageCmd}"></Button>
            <Button HorizontalAlignment="Center" VerticalAlignment="Center" Height="40" Width="200" Margin="10" Content="账户详情" Command="{Binding GoToBorrowPageCmd}"></Button>
            <Button HorizontalAlignment="Center" VerticalAlignment="Center" Height="40" Width="200" Margin="10" Content="管理页面" Command="{Binding GoToBorrowPageCmd}"></Button>
        </StackPanel>
        <Label Grid.Row="6" Grid.Column="1" Content="© 2025. All Rights Reserved. Developed by 348495990@qq.com" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Center" Grid.ColumnSpan="3" FontSize="15"/>
    </Grid>
</Page>
