<Page x:Class="yLibrary.windows.loginWindow.registPage.RegistPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:yLibrary"
      xmlns:page="clr-namespace:yLibrary.windows.loginWindow.registPage"
      xmlns:components="clr-namespace:yLibrary.components"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegistPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="4" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30" Content="注册页面"></Label>
        <StackPanel Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="4" Orientation="Horizontal">
            <Label HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="20" Content="用户名" Width="130" Margin="5"></Label>
            <TextBox HorizontalAlignment="Left" VerticalAlignment="Center" Height="30" Width="230" Margin="5" Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"></TextBox>
        </StackPanel>
        <StackPanel Grid.Row="3" Grid.Column="2" Grid.ColumnSpan="4" Orientation="Horizontal">
            <Label HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="20" Content="邮箱" Width="130" Margin="5"></Label>
            <TextBox HorizontalAlignment="Left" VerticalAlignment="Center" Height="30" Width="230" Margin="5" Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"></TextBox>
        </StackPanel>

        <StackPanel Grid.Row="4" Grid.Column="2" Grid.ColumnSpan="4" Orientation="Horizontal">
            <Label HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="20" Content="密码" Width="130" Margin="5"></Label>
            <components:yPasswordBox HorizontalAlignment="Left" VerticalAlignment="Center" Height="30" Width="190" Margin="5"
                             BindablePassword="{Binding Password}"></components:yPasswordBox>
            <Button HorizontalAlignment="Left" VerticalAlignment="Center" Height="30" Width="30" Margin="10"></Button>
        </StackPanel>
        <StackPanel Grid.Row="5" Grid.Column="2" Grid.ColumnSpan="4" Orientation="Horizontal">
            <Label HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="20" Content="再次输入密码" Width="130" Margin="5"></Label>
            <components:yPasswordBox HorizontalAlignment="Left" VerticalAlignment="Center" Height="30" Width="190" Margin="5"
                     BindablePassword="{Binding Password}"></components:yPasswordBox>
            <Button HorizontalAlignment="Left" VerticalAlignment="Center" Height="30" Width="30" Margin="10"></Button>
        </StackPanel>
        <Label Grid.Row="6" Grid.Column="1" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Center" Grid.ColumnSpan="5" FontSize="10" Foreground="{Binding InformationColor}" Content="{Binding InformationMsg}"/>
        <StackPanel Grid.Row="7" Grid.Column="2" Grid.ColumnSpan="4" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button HorizontalAlignment="Center" VerticalAlignment="Center" Height="25" Width="100" Margin="10" Content="返回登录页面" Command="{Binding BackToLoginCmd}"></Button>
            <Button HorizontalAlignment="Center" VerticalAlignment="Center" Height="25" Width="100" Margin="10" Content="提交"></Button>
        </StackPanel>
    </Grid>
</Page>
